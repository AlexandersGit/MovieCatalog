@model IEnumerable<Movies.Models.Movie>

@{
    ViewBag.Title = "Search for movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search</h2>

<table class="table">
    <tr>
        <th>
            @using (Html.BeginForm("Search", "Home", FormMethod.Get))
            {
                <p>
                    Title: @Html.TextBox("searchString")
                    <input type="submit" value="Filter" />
                </p>
            }
        </th>
        <th>
            <p style="text-align:right">
                @Html.ActionLink("Add New Movie", "AddMovie", "Add")
            </p>
        </th>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DirectorName.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Title, "Details", new {id = item.Id})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorName.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
        </tr>
    }

</table>
